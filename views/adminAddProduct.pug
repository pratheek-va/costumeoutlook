doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width,initial-scale=1')
  title Costumeoutlook-Add
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css' referrerpolicy='no-referrer')
  link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css' integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T' crossorigin='anonymous')
  link(href='https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/css/toastr.css' rel='stylesheet')
  link(rel='stylesheet' type='text/css' href='/css/loginSignup.css')
section#header
  a(href='#')
    img.logo(src='/img/New Project.jpg' width='100px')
  nav
    input#click(type='checkbox')
    label.menu-btn(for='click')
      i.fas.fa-bars
    ul
      li
        a(href='/admin/panel') Home
      li
        a(href='/admin/view-product') View Items
      li
        a(href='/admin/orders')
          | Orders 
          i.fas.fa-shopping-cart
      li
        a(href='#')
          | logout 
          i.fa.fa-user(aria-hidden='true')
section
  .container.h-100
    .row.justify-content-md-center.h-100
      .card
        .card.fat
          h2 Tshirt Add
          .card-body
            h4.card-title Add here-
            form.my-login-validation.add-product(novalidate='')
              if brand == 'new-product'
                .form-group
                  label(for='comapny') Category
                  div#category.form-control= "NEW"
                .form-group
                  label(for='comapny') Comapany Name
                  input#company-name.form-control(type='text' name='comapny' value='' required='' autofocus='')
              else
                .form-group
                  label(for='comapny') Category
                  div#category.form-control= "TSHIRT"
                .form-group
                  -const companyName = brand.split('-').join(' ').split(' ')
                  -let name = ''
                  -for(let i = 0; i < companyName.length; i++){
                  - name += companyName[i][0].toUpperCase() + companyName[i].slice(1)
                  -name += ' '
                  -}
                  label(for='comapny') Comapany Name
                  div#company-name.form-control= name 
              .form-group
                label(for='comapny')  Name
                input#name.form-control(type='text' name='comapny' value='' required='' autofocus='')
              .form-group
                label(for='comapny') Item price
                input#price.form-control(type='number' name='comapny' value='' required='' autofocus='')
              .form-group
                label(for='comapny') Original Deprecated price
                input#dprice.form-control(type='number' name='comapny' value='' required='' autofocus='')
              .form-group
                label(for='comapny') Item Size
                label(for='') small
                input#check(type='checkbox' value='S')
                label(for='') medium
                input#check(type='checkbox' value='M')
                label(for='') large
                input#check(type='checkbox' value='L')
                label(for='') extra large
                input#check(type='checkbox' value='XL')
              .form-group
                label(for='image') Item image
                input#image(type='file' multiple='multiple' name='image')
                br
              .form-group.m-0
                button.btn.btn-primary.btn-block.upload(type='submit')
                  | Upload
